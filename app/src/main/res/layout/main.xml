<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backmain">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/adres"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:inputType="textPostalAddress"
                android:background="#F2F2F2"
                android:maxLength="100"
                android:fontFamily="@font/roboto"
                android:hint="Выберите адрес доставки"
                android:textColorHint="#9A9A9D"
                android:textSize="18dp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/telega"
                android:onClick="check"
                android:src="@drawable/telega"
                android:layout_marginLeft="12dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/lupa"
                android:layout_marginLeft="13dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Foods"
            android:textSize="17dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/niz"
            android:fontFamily="@font/nunito_sans"
            android:textColor="#FA4A0C"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drinks"
            android:textSize="17dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/nunito_sans"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Snacks"
                android:textSize="17dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/nunito_sans"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sauce"
                android:textSize="17dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/nunito_sans"/>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-20dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/square2na1"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-80dp"
            android:scaleType="center"
            android:layout_marginTop="30dp"
            android:src="@drawable/square2na1"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dish_default_icon"
            android:layout_marginLeft="-358dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dish_default_icon"
                android:layout_marginLeft="46dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Цезарь"
                android:textSize="27dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginTop="140dp"
                android:layout_marginLeft="-288dp"
                android:fontFamily="@font/nunito_sans"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Пицца с ананасами"
                android:textSize="27dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:fontFamily="@font/nunito_sans"
                android:layout_marginTop="140dp"
                android:layout_marginLeft="60dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N1000"
                android:textSize="18dp"
                android:layout_marginLeft="-324dp"
                android:layout_marginTop="210dp"
                android:textStyle="bold"
                android:textColor="#FA4A0C"
                android:fontFamily="@font/nunito_sans"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:text="N1500"
                android:textSize="18dp"
                android:layout_marginTop="210dp"
                android:textStyle="bold"
                android:textColor="#FA4A0C"
                android:fontFamily="@font/nunito_sans"/>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="-50dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-20dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/square2na1"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-80dp"
                    android:scaleType="center"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/square2na1"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dish_default_icon"
                    android:layout_marginLeft="-358dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dish_default_icon"
                    android:layout_marginLeft="46dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Шаурма"
                    android:textSize="27dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginTop="140dp"
                    android:layout_marginLeft="-288dp"
                    android:fontFamily="@font/nunito_sans"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Пицца в столовке"
                    android:textSize="27dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:fontFamily="@font/nunito_sans"
                    android:layout_marginTop="140dp"
                    android:layout_marginLeft="60dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N1200"
                    android:textSize="18dp"
                    android:layout_marginLeft="-324dp"
                    android:layout_marginTop="210dp"
                    android:textStyle="bold"
                    android:textColor="#FA4A0C"
                    android:fontFamily="@font/nunito_sans"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120dp"
                    android:text="N2500"
                    android:textSize="18dp"
                    android:layout_marginTop="210dp"
                    android:textStyle="bold"
                    android:textColor="#FA4A0C"
                    android:fontFamily="@font/nunito_sans"/>
            </LinearLayout>
        </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="-50dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:src="@drawable/telega"
                android:scaleType="center"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="80dp"
                android:src="@drawable/lupa"
                android:scaleType="center"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="80dp"
                android:src="@drawable/telega"
                android:scaleType="center"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="80dp"
                android:src="@drawable/lupa"
                android:scaleType="center"/>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>